#!/usr/bin/env ruby

require_relative '../config/environment'
puts "Welcome to Tic Tac Toe! To play, please select the amount of users (0, 1, or 2 players):"

input = gets.strip

def start(input)
  if input == 0
    Game.new(player_1 = Players::Computer.new('X'), player_2 = Players::Computer.new('O'), board = Board.new).play
  elsif input == 1
    Game.new(player_1 = Players::Human.new('X'), player_2 = Players::Computer.new('O'), board = Board.new).play
  elsif input == 2
    Game.new.play
  else
    start(input)
  end
end
